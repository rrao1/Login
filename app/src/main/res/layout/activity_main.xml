<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/house_sunset_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.codepath.loginscreen.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We promise we won&apos;t post anything to your wall unless you ask us to."
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/airbnb_transparent"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:drawableLeft="@drawable/fb8"
        style="?android:attr/borderlessButtonStyle"
        android:text="Facebook"
        android:textColor="@color/colorDarkGrey"
        android:background="@color/colorWhite"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/ivGif"
        android:contentDescription="Gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageButton2"
        android:drawableLeft="@drawable/goog"
        style="?android:attr/borderlessButtonStyle"
        android:text="          Google                  "
        android:textColor="@color/colorDarkGrey"
        android:background="@color/colorWhite"
        android:layout_below="@+id/imageButton"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Email"
        android:background="#40FFFFFF"
        android:id="@+id/button"
        android:layout_below="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in or Create an Account"
        android:drawableLeft="@drawable/a_icon"
        android:id="@+id/button2"
        android:background="@color/colorWhite"
        android:textColor="@color/colorDarkGrey"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

</RelativeLayout>
